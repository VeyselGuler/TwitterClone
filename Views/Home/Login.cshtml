@using Microsoft.AspNetCore.Mvc.TagHelpers
@if (TempData["AuthError"] != null)
{
    <div class="alert alert-danger mb-3" role="alert">
        @TempData["AuthError"]
    </div>
}

<form action="/Login" method="post" autocomplete="off">
    <p>
        <input required type="text" name="nickname" placeholder="Kullanıcı Adı"/>
    </p>
    <p>
        <input required type="password" name="password" placeholder="Şifre"/>
    </p>
    <p>
        <a href="/Sifre-unuttum">şifremi unuttum</a>
    </p>
    <button>Giriş Yap</button>
</form>
<p>
    <a href="/home/register">Kayıt Ol</a>
</p>
